<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:text="lati0:"
        android:layout_width="45dp"
        android:layout_height="match_parent"
        />

    <EditText

        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/latitud0"/>
    <TextView
        android:text="long0:"
        android:layout_width="55dp"
        android:layout_height="match_parent" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/longitud0"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnConectar"
        android:text="dispositivos emparejados"
        android:onClick="listarEmparejados"
        />

</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="lati1:"
            android:layout_width="45dp"
            android:layout_height="match_parent" />

        <EditText

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/latitud1"/>
        <TextView
            android:text="long1:"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            />
        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/longitud1"/>

    </LinearLayout>
    <TextView
        android:id="@+id/bluetoothstate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <TextView

        android:id="@+id/pairedlist"
        android:layout_width="wrap_content"
        android:layout_height="5dp"

        />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="380dp"
    android:layout_height="360dp"
    tools:context="com.example.ricardoom.app_gps_arduino.MapsActivity_GPS" />

</LinearLayout>

